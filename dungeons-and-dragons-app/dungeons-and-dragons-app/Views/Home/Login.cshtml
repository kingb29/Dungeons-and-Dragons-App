@{
    ViewData["Title"] = "Login";
}

@section Styles {
    <link href="@Url.Content("~/css/site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/css/login.css")" rel="stylesheet" type="text/css" />
}

@model LoginViewModel
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login Page</title>
</head>
<body>

    
    @ViewBag.error
    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
    {   
        <div class="row">
            <div class="col-xs-12 col-md-5">
                <h3>Login</h3>
                <table border="0" cellpadding="5" cellspacing="5">
                    <tr>
                        <td>Username:</td>
                        <td>@Html.TextBox("username")</td>
                    </tr>

                    <tr>
                        <td>Password:</td>
                        <td>@Html.Password("hashPass")</td>
                    </tr>

                    <tr>
                        <td>&nbsp;</td>
                        <td><input type="submit" value="Login"></td>
                    </tr>
                </table>
                <br>
                <p>Please Login if you already have an account, otherwise please <a asp-area="" asp-controller="Home" asp-action="CreateAccount">Sign Up</a>.</p>
            </div>
    <div class="col-xs-12 col-md-7">
        <img src="~/images/dndlogo.jpg" />
    </div>
    </div>
}
</body>
</html>